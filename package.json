{
  "name": "@pengzhanbo/utils",
  "version": "3.3.1",
  "keywords": [
    "utils"
  ],
  "homepage": "https://github.com/pengzhanbo/utils",
  "bugs": "https://github.com/pengzhanbo/utils/issues",
  "license": "MIT",
  "author": "pengzhanbo <q942450674@outlook.com> (https://github.com/pengzhanbo)",
  "repository": {
    "type": "git",
    "url": "https://github.com/pengzhanbo/utils.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "lint": "oxlint . --type-check --type-aware",
    "format": "oxfmt .",
    "prepublishOnly": "pnpm run build",
    "test": "cross-env TZ=Etc/UTC vitest --coverage",
    "release:publish": "pnpm publish --provenance --access public",
    "release": "bumpp package.json jsr.json --commit \"build: publish v%s\" --push --tag --all",
    "prepare": "husky"
  },
  "devDependencies": {
    "@pengzhanbo/tsconfig": "^2.0.0",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "bumpp": "^10.4.1",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "oxlint-tsgolint": "^0.14.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs}": "pnpm run lint",
    "*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{js,ts}": "vitest related --run"
  },
  "packageManager": "pnpm@10.30.0"
}
